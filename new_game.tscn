[sub_resource type="GDScript" id=2]

script/source = "extends Control

func _ready():
	set_process(true)

func _process(delta):
	if Input.is_action_pressed(\"ui_cancel\"):
		get_node(\"Cancel\")._on_button_pressed()

func handle(func_name):
	get_node(\"../Fade\").begin_fade_out()
	get_node(\"../Fade\").connect(\"fade_finished\", self, func_name)

func cancel():
	get_tree().change_scene(\"res://main_menu.scn\")

func start():
	var diff
	if get_node(\"EasyCheck\").is_pressed():
		diff = \"easy\"
	elif get_node(\"MediumCheck\").is_pressed():
		diff = \"medium\"
	elif get_node(\"HardCheck\").is_pressed():
		diff = \"hard\"
	
	GameData.data = {
		current_level = 0,
		highest_level_discovered = 0,
		name = get_node(\"Name\").get_text(),
		difficulty = diff,
	}
	GameData.save_data() # write the new game data to disk


func _on_EasyCheck_pressed():
	get_node(\"EasyCheck\").set_pressed(true)
	get_node(\"MediumCheck\").set_pressed(false)
	get_node(\"HardCheck\").set_pressed(false)


func _on_MediumCheck_pressed():
	get_node(\"EasyCheck\").set_pressed(false)
	get_node(\"MediumCheck\").set_pressed(true)
	get_node(\"HardCheck\").set_pressed(false)


func _on_HardCheck_pressed():
	get_node(\"EasyCheck\").set_pressed(false)
	get_node(\"MediumCheck\").set_pressed(false)
	get_node(\"HardCheck\").set_pressed(true)
"

